    <br>

    <!-- fax & standar & tel -->
    <div class="row">
      <div class="col-md-4">
        {% if form_errors(form.fax) %}
          <div class="alert alert-danger">
            {{ form_errors(form.fax) }}
          </div>
        {% endif %}
        {{ form_widget(form.fax, {'attr': {'class': 'form-control',
          'placeholder': 'Fax'}} ) }}
      </div>
      <div class="col-md-4">
        {% if form_errors(form.tel) %}
