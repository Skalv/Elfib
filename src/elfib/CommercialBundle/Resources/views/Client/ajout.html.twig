    </div>

    <br>

    <!-- forme Juridique et CA -->
    <div class="row">
      <div class="col-md-6">
        {% if form_errors(form.formeJuridique) %}
          <div class="alert alert-danger">
            {{ form_errors(form.formeJuridique) }}
