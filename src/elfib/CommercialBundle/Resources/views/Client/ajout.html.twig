        {{ form_widget(form.livRue, {'attr': {'class': 'form-control',
          'placeholder': 'Rue'}} ) }}
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
        {% if form_errors(form.livCP) %}
          <div class="alert alert-danger">
            {{ form_errors(form.livCP) }}
          </div>
        {% endif %}
        {{ form_widget(form.livCP, {'attr': {'class': 'form-control',
          'placeholder': 'Code postal'}} ) }}
      </div>
      <div class="col-md-6">
        {% if form_errors(form.livVille) %}
          <div class="alert alert-danger">
