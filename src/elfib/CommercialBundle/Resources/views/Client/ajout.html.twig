{# src/elfib/CommercialBundle/Resources/views/Commercial/index.html.twig #}

{% extends "elfibCommercialBundle::layout.html.twig" %}

{% block title %}
  {{ parent() }} - {{ action }} un client
{% endblock %}

{% block body %}
  <h3>{{ action }} un client</h3>
  <hr>
  <div id="fournisseurAjout" class="text-center">
    
    {{ form_start(form) }}
    <!-- Nom et Activité -->
    <div class="row">
      <div class="col-md-6">
        {% if form_errors(form.nom) %}
          <div class="alert alert-danger">
            {{ form_errors(form.nom) }}
          </div>
        {% endif %}
        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 
          'placeholder': 'Nom'}} ) }}
      </div>
      <div class="col-md-6">
        {% if form_errors(form.activite) %}
          <div class="alert alert-danger">
            {{ form_errors(form.activite) }}
          </div>
        {% endif %}
        {{ form_widget(form.activite, {'attr': {'class': 'form-control', 
          'placeholder': 'Activité'}} ) }}
      </div>
    </div>

    <br>

    <!-- Adresse Siege -->
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h4>Siège social</h4>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        {% if form_errors(form.sieRue) %}
          <div class="alert alert-danger">
            {{ form_errors(form.sieRue) }}
          </div>
        {% endif %}
        {{ form_widget(form.sieRue, {'attr': {'class': 'form-control',
          'placeholder': 'Rue'}} ) }}
      </div>
    </div>
    <div class="row">
      <div class="col-md-6">
        {% if form_errors(form.sieCP) %}
          <div class="alert alert-danger">
            {{ form_errors(form.sieCP) }}
