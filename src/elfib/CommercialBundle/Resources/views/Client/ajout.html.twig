        {% endif %}
        {{ form_widget(form.sieCP, {'attr': {'class': 'form-control',
          'placeholder': 'Code postal'}} ) }}
      </div>
      <div class="col-md-6">
        {% if form_errors(form.sieVille) %}
          <div class="alert alert-danger">
            {{ form_errors(form.sieVille) }}
          </div>
        {% endif %}
        {{ form_widget(form.sieVille, {'attr': {'class': 'form-control',
          'placeholder': 'Ville'}} ) }}
      </div>
    </div>

    <br>

    <!-- Adresse Livraison -->
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h4>Livraison</h4>
      </div>
    </div>
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        {% if form_errors(form.livRue) %}
          <div class="alert alert-danger">
            {{ form_errors(form.livRue) }}
